<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:layout_margin="5dp">
    <ImageView
        android:onClick="changTheScene"
        android:id="@+id/image1_tran"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/mario"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:onClick="changTheScene"
        android:id="@+id/image2_tran"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/hc_rect"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:onClick="changTheScene"
        android:id="@+id/image3_tran"

        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/bg2"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:onClick="changTheScene"
        android:id="@+id/image4_tran"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/game_bg"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>